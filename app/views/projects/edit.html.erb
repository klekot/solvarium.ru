<h1>Редактировать проект</h1>  

<%= form_for(@project, :url => {:action => 'update', :id => @project.id}) do |f| %>

  <% if not @project.nil? and @project.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@project.errors.count, "error") %> prohibited
      this project from being saved:</h2>
    <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= f.label 'Название:' %><br>
    <%= f.text_field :title, value: @project.title %>
  </p>

  <p>
    <%= f.label 'Описание:' %><br>
    <%= f.text_area :description, value: @project.description %>
  </p>



  <p>
    <%= f.submit 'Сохранить' %>
  </p>
<% end %>

