<h1>Новый проект</h1>  

<%= form_for :project, url: projects_path do |f| %>

  <% if not @project.nil? and @project.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@project.errors.count, "error") %> prohibited
      this project from being saved:</h2>
    <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= f.label 'Название:' %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label 'Описание:' %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label 'Сделать текущим:' %>
    <%= f.check_box :current, value: 1 %>
  </p>

  <p>
    <%= f.submit 'Сохранить' %>
  </p>
<% end %>

<%= link_to 'К списку проектов', projects_path %>