.container-fluid
  .row
    .col-md-2
    .col-md-8
      = form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f|
        %h2.form-signin-heading{:style => "text-align: center;"} Вход в "Солвариум"
        %br/
        %br/
        .field
          = f.email_field :email, class: "form-control", placeholder: "Email address", required: true,  autofocus: true
        %br/
        %br/
        .field
          = f.password_field :password, autocomplete: "off",  class: "form-control", placeholder: "Password", required: true
        %br/
        - if devise_mapping.rememberable?
          .checkbox
            %label
              %input{:type => "checkbox", :value => "remember-me"}/
              Запомнить меня
        %br/
        .actions
          = f.submit "Войти", class: "btn btn-lg btn-primary btn-block"
      %br/
      = render "devise/shared/links"
    .col-md-2
