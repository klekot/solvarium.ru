%br/
%br/
.container
  .row
    .col-md-2
    .col-md-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin") do |f|
        %h2.form-signin-heading{:style => "text-align: center;"} Регистрация в "Солвариуме"
        %br/
        %br/
        .field
          = f.text_field :name, class: "form-control", placeholder: "Введите ваше имя", required: true,  autofocus: true
        %br/
        .field
          = f.email_field :email, class: "form-control", placeholder: "Введите ваш email", required: true
        %br/
        .field
          = f.password_field :password, autocomplete: "off",  class: "form-control", placeholder: "Задайте ваш пароль", required: true
        %br
        .field
          = f.password_field :password_confirmation, autocomplete: "off",  class: "form-control", placeholder: "Подтвердите пароль", required: true
        %br/
        .actions
          = f.submit "Зарегистрироваться", class: "btn btn-lg btn-primary btn-block"
      %br/
      = render "devise/shared/links"
    .col-md-2
