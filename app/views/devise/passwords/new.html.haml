.container
  .row
    .col-md-2
    .col-md-4
      %h2{:style => "text-align: center;"} Забыли пароль?
      %br/
      %br/
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!
        .field
          = f.email_field :email, class: "form-control", placeholder: "Введите ваш email", autofocus: true
        %br/
        %br/
        .actions
          = f.submit "Восстановить доступ", class: "btn btn-lg btn-primary btn-block"
      %br/
      %br/
      = render "devise/shared/links"
    .col-md-2
