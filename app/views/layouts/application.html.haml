    = include_sync_config
  %body
    = include_gon
    = render "shared/navbar"
    = render "shared/project_bar"
    .container
      .row
        .col-md-1
        .col-md-10
          %br
          %br
          %br
          %br
          %br
          %br
          = render "shared/flash"
          = yield
        .col-md-1
          /
            <p class="notice"><haml_silent></haml_silent></p>
            <p class="alert"><haml_silent></haml_silent></p>
    / /.container
